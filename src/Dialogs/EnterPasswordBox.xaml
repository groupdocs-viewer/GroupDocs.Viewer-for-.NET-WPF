<Window x:Class="GroupDocs.Viewer.WPF.Dialogs.EnterPasswordBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GroupDocs.Viewer.WPF.Dialogs"
        mc:Ignorable="d"
		Icon="/Resources/locked.ico"
		Loaded="Window_Loaded"
        Title="Password required!" Height="127" Width="359" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterScreen">
	<Grid>
		<Label Content="Please specify password to load the document" HorizontalAlignment="Left" Margin="15,0,0,0"  VerticalAlignment="Top" />
		<TextBox Name="txtPassword" HorizontalAlignment="Left" KeyDown="OnKeyDownHandler" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="311" Margin="20,25,0,0" />
		<Button Name="okBtn" Visibility="Visible" Click="OkBtn_Click" Width="75" Height="23" Content="OK" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="20,0,0,10"  ></Button>
		<Button Name="cancelBtn" Visibility="Visible" Click="CancelBtn_Click" Width="75" Height="23" Content="Cancel"  VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="110,0,0,10" ></Button>
	</Grid>
</Window>
